/* pages/outdoor/outdoor.wxss */

/*不同天气设置不同过的背景颜色*/
.default{
  background-color: #444;
  border-color: #444;
}
/*雨天*/

.rain {
  background-color: #758797;
  border-color: #758797;
}

/*晴天*/
.sunny {
  background-color: #3A87CD;
  border-color: #3A87CD;
}

/*多云*/
.cloudy {
  background-color: #708892;
  border-color: #708892;
}

/*雪天*/
.snow {
  background-color: #788e95;
  border-color: #788e95;
}
.ui-card {
  color: #fff;
}

/*控制显隐*/
.show {
  display: block;
}
.hide {
  display: none;
}
.map-icon {
  width: 20px;
  height: 20px;
  vertical-align: middle;
}
.realtime-temperature {
  font-size: 3em;
  text-align: center;
  height: 2em;
  width: 100%;
  display: block;
  overflow: hidden;
}
.realtime-date {
  font-size: 1.2em;
}
.today-info {
  height: 22px;
}
.weather {
  float: left;
  font-size: 14px;
  line-height: 22px;
  height: 22px;
}
.weather-icon-big{
  width: 5em;
  height: 5em;
}
.pm25 {
  border: 1px solid #fff;
  border-radius: 5px;
  width: auto;
  display: block;
  height: 30px;
  line-height: 30px;
  padding: 0 5px;
  float: right;
  margin-top: 15px;
}
.line{
  font-size: 15px;
  height: 30px;
  line-height: 30px;
  display: block;
  float: left;
  width: 100%;
}
/*未来三天*/
.weather-item {
  text-align: center;
  margin: .3em;
  border-radius: 5px;
  border: 1px solid #eee;
  padding: 1em 0;
  background-color: rgba(26,173,25,.7);
  color: #fff;
}
.weather-icon {
  width: 30px;
  height: 30px;
  display: block;
  margin: .3em auto;
}
.page-content{
  padding: 1em;
}
/*各项指数*/
.index-item{
  margin: .3em;
  border: 1px solid #ccc;
  padding: .5em;
  border-radius: 5px;
  background-color: #F6F4F5;
}
.index-item-title{
  color: #252524;
  font-weight: bold;
}
.index-item-des{
  color:#6A6967;
}

.ui-flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}

.ui-flex-item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}

.ui-flex-item-2 {
  -webkit-box-flex: 2;
  -webkit-flex: 2;
  flex: 2;
}
/*text-align*/
.text-center{
  text-align: center;
}
/*ui-panel*/

.ui-panel {
  width: 100%;
  height: auto;
  overflow: hidden;
}

.panel-title {
  height: 1.6em;
  line-height: 1.6em;
  font-size: 1em;
  color: #333;
  font-weight: 600;
}

.panel-content {
  padding: 0.3em 0;
}

/*ui-card*/

.ui-card {
  margin: 0.3em 1em;
  /*padding:.5em;*//*background-color: #333;*/
  border: 1px solid #ccc;
  border-radius: 5px;
  font-family: -apple-system-font, Arial, "Times New Roman", "Helvetica Neue", sans-serif;
  letter-spacing: 1px;
}

.ui-card-in-page-content {
  margin: 0;
}

.ui-card-header {
  text-align: center;
  height: 3em;
  line-height: 3em;
}

.ui-card-content {
  padding: 0.5em;
}

button {
  margin: 0.3em;
}

swiper{
  width: 100%;
  height: 400rpx;
}

swiper image{
  width: 100%;
  height: 400rpx;
}